# Example Zonation settings file to generate transformed layers as outputs
#  In '[Settings]', '[Community analysis settings]', and '[Info-gap settings]' -> enable most analysis 
# options for which a transformed layer can be generated (beware - community can be slow)
#  Then the options to generate transformed layers as outputs are enabled in the '[Transformed layers]' 
# section (at the end).
[Settings]
removal rule = 1
warp factor = 300
edge removal = 1
add edge points = 0
use SSI = 0
SSI file name = tutorial_input/SSI_list.txt
# use planning unit layer = 0
# planning unit layer file = tutorial_input/plu.tif
initial removal percent = 0.0

use cost = 0
cost file = tutorial_input/cost.tif
use mask = 0
# mask file = tutorial_input/mask_rs.tif
use boundary quality penalty = 0
BQP profiles file = tutorial_input/BQPcurves.txt
BQP mode = 1
BLP = 0
# use tree connectivity = 0
# tree connectivity file = tutorial_input/tree.txt
# use interactions = 0
# interaction file = tutorial_input/interact.spp

annotate name = 0
logit space = 0
treat zero-areas as missing data = 0
z = 0.25
resample species = 0

use groups = 1
groups file = tutorial_input/groups_transf_layers.txt
use condition layer = 1
condition file = tutorial_input/cond_list.txt

use retention layer = 1
retention file = tutorial_input/ret_list.txt
retention layers relative weight = 1000.0

[Community analysis settings]
load similarity matrix = 0
connectivity similarity matrix file = 
apply to connectivity = 0
community similarity matrix file = tutorial_input/community_similarity.txt 
apply to representation = 0


[Info-gap settings]
Info-gap proportional = 0
use info-gap weights  = 1
Info-gap weights file = tutorial_input/UCweights.spp

# Enable generation of transformed layers
# A directory will be created for each option
# These layers can be opened in the GUI: project tree / instance / transformed layers
[Transformed layers]
output final transformed layers = 1
output info-gap transformed layers = 1
output distribution smoothing transformed layers = 1
output community similarity transformed layers = 1
output condition transformed layers = 1
output retention transformed layers = 1
output matrix connectivity transformed layers = 1
output interactions transformed layers = 1
